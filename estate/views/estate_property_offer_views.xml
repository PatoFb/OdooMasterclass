<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Properties" create="True" editable="true">
                <field string="Price" name="price"/>
                <field string="Partner" name="partner_id"/>
                <field string="Validity (days)" name="validity"/>
                <field string="Deadline" name="date_deadline"/>
                <button name="accept_offer" type="object" icon="fa-check" invisible="status != False"/>
                <button name="refuse_offer" type="object" icon="fa-times" invisible="status != False"/>
                <field string="Status" name="status"/>
            </list>
        </field>
    </record>
</odoo>